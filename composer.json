{
	"name": "icanboogie/bind-event",
	"type": "library",
	"description": "Binds icanboogie/event to ICanBoogie.",
	"keywords": [ "event", "icanboogie" ],
	"homepage": "http://icanboogie.org/",
	"license": "BSD-3-Clause",
	"authors": [
		{
			"name": "Olivier Laviale",
			"email": "olivier.laviale@gmail.com",
			"homepage": "http://www.weirdog.com/",
			"role" : "Developer"
		}
	],
	"support": {
		"issues": "https://github.com/ICanBoogie/bind-event/issues",
		"source": "https://github.com/ICanBoogie/bind-event"
	},

	"minimum-stability": "dev",
	"prefer-stable": true,

	"require": {
		"php": ">=5.6",
		"icanboogie/icanboogie": "^4.0",
		"icanboogie/event": "^3.0"
	},

	"autoload": {
		"psr-4": {
			"ICanBoogie\\Binding\\Event\\": "lib/"
		}
	},

	"extra": {
		"icanboogie": {
			"config-path": "config",
			"config-constructor": {
				"event": "ICanBoogie\\Binding\\Event\\Hooks::synthesize_config"
			}
		}
	},

	"scripts": {
		"post-autoload-dump": "ICanBoogie\\Autoconfig\\Hooks::on_autoload_dump"
	}
}
